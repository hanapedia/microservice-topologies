package main

import (
	"context"
	"log"

{% if type == 'chain' %}
	pb "github.com/hanapedia/microservice-topologies/{{ name }}/root/pb_chain_1"
{% elif type == 'fanout' %}
	pb "github.com/hanapedia/microservice-topologies/{{ name }}/root/pb_fanout_0"
{% endif %}
	"google.golang.org/grpc"
	"google.golang.org/grpc/credentials/insecure"
)

func main() {
  var opts []grpc.DialOption
  opts = append(opts, grpc.WithTransportCredentials(insecure.NewCredentials()))

  conn, err := grpc.Dial("localhost:{{ entryport }}", opts...)
  if err != nil {
    log.Printf("Cannot establish connection with the server: %v", err)
  }
  defer conn.Close()

{% if type == 'chain' %}
  client := pb.NewChain_1Client(conn)
{% elif type == 'fanout' %}
  client := pb.NewFanout_0Client(conn)
{% endif %}
  ids, err := client.GetIds(context.Background(), &pb.Req{Ids: []int32{25}})
  if err != nil {
    log.Printf("failed to retrieve ids: %v", err)
  }
  log.Printf("ids: %v", ids)
}
